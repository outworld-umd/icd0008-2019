@page
@model WebApp.Pages_Games.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a asp-page="Create"><button class="btn btn-primary">New Game</button></a>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GameState[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameState[0].Data)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.GameState) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Name">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Name">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Name">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>