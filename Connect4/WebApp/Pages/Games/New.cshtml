@page
@using DAL
@model WebApp.Pages_Games.CreateModel

@{
    ViewData["Title"] = "New game";
}

<h1>Create new game</h1>
<br>
<h4>Field size is currently @Model.SettingsState.BoardHeight x @Model.SettingsState.BoardWidth</h4>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameState.Name" class="control-label"></label>
                <input asp-for="GameState.Name" class="form-control" />
                <input asp-for="GameState.Data" type="hidden" />
                <span asp-validation-for="GameState.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> <a class="btn btn-secondary" asp-page="Load">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
