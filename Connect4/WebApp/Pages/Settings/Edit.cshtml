@page
@model WebApp.Pages_Settings.EditModel

@{
    ViewData["Title"] = "Edit settings";
}

<h1>Edit settings</h1>
<br>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SettingsState.SettingsId" />
            <div class="form-group">
                <label asp-for="SettingsState.BoardHeight" class="control-label">Board Height</label>
                <input asp-for="SettingsState.BoardHeight" id="height" class="form-control" />
                <span asp-validation-for="SettingsState.BoardHeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SettingsState.BoardWidth" class="control-label">Board Width</label>
                <input asp-for="SettingsState.BoardWidth" id="width" class="form-control" />
                <span asp-validation-for="SettingsState.BoardWidth" class="text-danger"></span>
            </div>
            <input type="submit" value="Save" class="btn btn-primary" />
            <a class="btn btn-secondary" onclick="$('#height').val(6);$('#width').val(7)">Set defaults</a>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
