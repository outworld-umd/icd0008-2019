@page
@model ExamApp.Pages_Choices.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Choice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Choice.Text" class="control-label"></label>
                <input asp-for="Choice.Text" class="form-control" />
                <span asp-validation-for="Choice.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Choice.QuestionId" value="@Model.QuestionID">
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <table class="table">
            <thead>
            <tr>
                <th>
                    Title
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Choices)
            {
                <tr>
                    <td>
                        @item.Text
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ChoiceId">Edit</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ChoiceId" asp-route-redirect="@item.QuestionId">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        </div>
</div>

<div>
    <a asp-page="/Questions/Create" asp-route-id="@Model.QuizID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
