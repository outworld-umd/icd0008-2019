@page
@model ExamApp.Pages_Choices.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Choice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Choice.ChoiceId" />
            <div class="form-group">
                <label asp-for="Choice.Text" class="control-label"></label>
                <input asp-for="Choice.Text" class="form-control" />
                <span asp-validation-for="Choice.Text" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Choice.QuestionId" class="form-control" value="@Model.Choice.QuestionId"/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Choices/Create" asp-route-id="@Model.QuestionID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
