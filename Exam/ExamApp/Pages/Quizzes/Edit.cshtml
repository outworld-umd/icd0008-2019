@page
@using Domain
@using Type = Domain.Type
@model ExamApp.Pages_Quizzes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Quiz</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Quiz.QuizId" />
            <div class="form-group">
                <label asp-for="Quiz.Name" class="control-label"></label>
                <input asp-for="Quiz.Name" class="form-control" />
                <span asp-validation-for="Quiz.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quiz.Description" class="control-label"></label>
                <input asp-for="Quiz.Description" class="form-control" />
                <span asp-validation-for="Quiz.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quiz.Type" class="control-label"></label>
                <select asp-for="Quiz.Type" class="form-control" asp-items="Html.GetEnumSelectList<Type>()"></select>
                <span asp-validation-for="Quiz.Type" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Quiz.CreationTime" value="@Model.Quiz.CreationTime"/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-page="/Questions/Create" asp-route-id="@Model.Quiz.QuizId">Add Question</a>
                <a class="btn btn-danger" asp-page="/Quizzes/Delete" asp-route-id="@Model.Quiz.QuizId">Delete</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
